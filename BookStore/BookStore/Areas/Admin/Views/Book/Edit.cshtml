@model Book

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Edit Book</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for=Id hidden />
            <div class="border p-3 mt-4">
                <div class="mb-3 row p-1 row">
                    <label asp-for=Title class="p-0"></label>
                    <input asp-for=Title type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Title class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Author class="p-0"></label>
                    <input asp-for=Author type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Author class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Description class="p-0"></label>
                    <input asp-for=Description type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Description class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=ISBN class="p-0"></label>
                    <input asp-for=ISBN type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=ISBN class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=ListPrice class="p-0"></label>
                    <input asp-for=ListPrice type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=ListPrice class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Price class="p-0"></label>
                    <input asp-for=Price type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Price class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Price50 class="p-0"></label>
                    <input asp-for=Price50 type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Price50 class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Price100 class="p-0"></label>
                    <input asp-for=Price100 type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Price100 class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            Edit
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}