@model BookViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Create Book</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Book.Id" value="0" hidden />
            <input asp-for="Book.ImageUrl" value="ok" hidden />
            <div class="border p-3 mt-4">
                <div class="mb-3 row p-1 row">
                    <label asp-for=Book.Title class="p-0"></label>
                    <input asp-for=Book.Title type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Book.Title class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Book.Author class="p-0"></label>
                    <input asp-for=Book.Author type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Book.Author class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Book.Description class="p-0"></label>
                    <textarea asp-for=Book.Description type="text" class="form-control border-1 border-secondary"></textarea>
                    <span asp-validation-for=Book.Description class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Book.CategoryId class="p-0">Category</label>
                    <select asp-for=Book.CategoryId asp-items=@Model.Categories class="form-select border-1 border-secondary">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for=Book.CategoryId class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Book.ISBN class="p-0"></label>
                    <input asp-for=Book.ISBN type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Book.ISBN class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Book.ListPrice class="p-0"></label>
                    <input asp-for=Book.ListPrice type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Book.ListPrice class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Book.Price class="p-0"></label>
                    <input asp-for=Book.Price type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Book.Price class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Book.Price50 class="p-0"></label>
                    <input asp-for=Book.Price50 type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Book.Price50 class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label asp-for=Book.Price100 class="p-0"></label>
                    <input asp-for=Book.Price100 type="text" class="form-control border-1 border-secondary" />
                    <span asp-validation-for=Book.Price100 class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1 row">
                    <label class="p-0">Image</label>
                    <input name="image" type="file" class="form-control border-1 border-secondary" />
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
