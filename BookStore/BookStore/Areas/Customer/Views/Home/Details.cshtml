@model Book

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient text-light py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white text-uppercase">@Model.Title</h3>
                <p class="text-white-50 fw-semibold mb-0">by <span>@Model.Author</span></p>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="py-3">
            <div class="row">
                <div class="col-6 col-md-2 offset-lg-1 pb-1">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                        <span class="text-white">Back to home</span>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                    <img src="@Model.ImageUrl" width="100%" class="rounded" />
                </div>
                <div class="col-12 col-lg-6 offset-lg-1">

                    <div class="col-12 col-md-6 pb-4">
                        <span class="badge">@Model.Category.Name</span>
                    </div>
                    <div class="row ps-2">
                        <h6 class="text-dark">ISBN : @Model.ISBN</h6>
                    </div>
                    <div class="row ps-2">
                        <h6 class="text-dark pb-2">
                            List Price:
                            <span>
                                @Model.ListPrice
                            </span>
                        </h6>
                    </div>
                    <div class="row text-center ps-2">
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark fw-semibold">Quantity</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark fw-semibold">1-50</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark fw-semibold">51-100</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark fw-semibold">100+</div>
                        </div>
                    </div>
                    <div class="row text-center ps-2">
                        <div class="p-1 col-3 col-lg-2 bg-white fw-bold">
                            <div>Price</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>@Model.Price</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>@Model.Price50</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>@Model.Price100</div>
                        </div>
                    </div>
                    <div class="row pl-2 my-3">
                        <p class="text-dark lh-sm">Description</p>
                        <p class="text-dark lh-sm">@Model.Description</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
    

